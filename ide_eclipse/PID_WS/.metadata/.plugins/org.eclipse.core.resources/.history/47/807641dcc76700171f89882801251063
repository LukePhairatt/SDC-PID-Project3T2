#ifndef PID_H
#define PID_H


#include <vector>

class PID {
public:
  /*
  * Errors
  */
  double p_error;
  double i_error;
  double d_error;

  /*
  * Coefficients
  */ 
  double Kp;
  double Ki;
  double Kd;

  /*
  * Constructor
  */
  PID();

  /*
  * Destructor.
  */
  virtual ~PID();

  /*
  * Initialize PID.
  */
  void Init(double Kp, double Ki, double Kd);

  /*
  * Update the PID error variables given cross track error.
  */
  void UpdateError(double cte);

  /*
  * Calculate the total PID error.
  */
  double TotalError();


  /*
   *  Reset PID errors and Gain (only for tuning)
   */
  void resetPID(double Kp, double Ki, double Kd);

  /*
   * Tuning pid using Twiddle
   */
  double TunePIDTwiddle();

  /*
   * Tuning Params
   */
  std::vector<double> dp = {0.01,0.01,0.0001};
  double old_rms_err = 0.0;
  double now_rms_err = 0.0;



};

#endif /* PID_H */
